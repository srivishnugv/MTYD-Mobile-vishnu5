                </Grid.RowDefinitions>

                <Button
                    x:Name="meals1"
                    WidthRequest="150"
                    HeightRequest="60"
                    Margin="4,4,0,4"
                    HorizontalOptions="Center"
                    BackgroundColor="#FFF0C6"
                    VerticalOptions="Start"
                    Text=""
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="20"
                    Grid.Column="0"
                    Grid.Row="0"
                    CornerRadius="40"
                    Clicked="clickedMeals1"/>

                <Button 
                    x:Name="meals2"
                    WidthRequest="150"
                    HeightRequest="60"
                    Margin="0,4,4,4"
