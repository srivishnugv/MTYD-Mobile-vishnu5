                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="20"
                    Grid.Column="0"
                    Grid.Row="1"
                    CornerRadius="40"
                    Clicked="clickedMeals2"/>

                <Button 
                    x:Name="meals3"
                    WidthRequest="150"
                    HeightRequest="60"
                    Margin="4,4,0,4"
                    HorizontalOptions="Center"
                    BackgroundColor="#FFF0C6"
                    VerticalOptions="Start"
                    Text=""
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="20"
                    Grid.Column="1"
                    Grid.Row="0"
                    CornerRadius="40"
                    Clicked="clickedMeals3"/>

                    <Button 
                    x:Name="meals4"
                    WidthRequest="150"
                    HeightRequest="60"
                    Margin="0,4,4,4"
                    HorizontalOptions="Center"
                    BackgroundColor="#FFF0C6"
                    VerticalOptions="Start"
                    Text=""
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="20"
                    Grid.Column="1"
                    Grid.Row="1"
                    CornerRadius="40"
                    Clicked="clickedMeals4"/>
                </Grid>

                <AbsoluteLayout>

                    <BoxView x:Name="divider" HeightRequest="1" WidthRequest="10" BackgroundColor="#FFBA00"
                             AbsoluteLayout.LayoutBounds="0.5,0, 0.9, 1"
                             AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional"/>

                </AbsoluteLayout>

                <Label x:Name="spacer6" HeightRequest="5"/>

                <Label Text="PRE PAY OPTIONS" HorizontalOptions="Start" FontSize="22" Margin="30,0,0,0" FontAttributes="Bold"/>
                <Label x:Name="spacer2" HeightRequest="5"/>

                <AbsoluteLayout>

                    <Frame x:Name="payFrame" HeightRequest="120" WidthRequest="100"
