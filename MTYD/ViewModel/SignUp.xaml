<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MTYD.ViewModel.SignUp">

    <StackLayout>

    <AbsoluteLayout>

        <Image  AbsoluteLayout.LayoutBounds="1, -15, 2, 1"
                AbsoluteLayout.LayoutFlags="All"
                Source="landing.jpg" Aspect="AspectFill" Rotation="180"/>

        <Image AbsoluteLayout.LayoutBounds="1,1,1,1"
               AbsoluteLayout.LayoutFlags="All"
               BackgroundColor="Black" Aspect="AspectFill" Opacity="0.5"/>

        <Label Text="NUTRITION&#10;MADE EASY" FontAttributes="Bold" LineHeight="1"
               AbsoluteLayout.LayoutBounds="0.5, 0.14"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               FontSize="44" VerticalOptions="Center"
               HorizontalTextAlignment="Center"
               TextColor="#FFFFFF" CharacterSpacing="3"/>

        <Label x:Name="subHeading" Text="LOCAL. ORGANIC. RESPONSIBLE."
               VerticalOptions="Center" TextColor="#FFB054" FontAttributes="Bold"
               HorizontalTextAlignment="Center" FontSize="20"
               AbsoluteLayout.LayoutBounds="0.5, 0.26" CharacterSpacing="1"
               AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <Frame x:Name="BackgroundOrange" BackgroundColor="#F59A28"
               AbsoluteLayout.LayoutBounds="0.5, 0.53"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               HeightRequest="310" WidthRequest="330"
               CornerRadius="21"/>

        <Frame x:Name="BackgroundWhite" BackgroundColor="White"
               AbsoluteLayout.LayoutBounds="0.5, 0.527"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               HeightRequest="300" WidthRequest="320"
               CornerRadius="20" HasShadow="False"/>

        <Grid AbsoluteLayout.LayoutBounds="0.5, 0.39"
              AbsoluteLayout.LayoutFlags="PositionProportional">

              <Frame CornerRadius="20" Padding="20,10" Margin="0"
                     HasShadow="False" BackgroundColor="#FFE5B4">
                    
                   <Entry x:Name="newUsername" Keyboard="Text" FontAttributes="Bold"
                   FontSize="16" Placeholder="USERNAME"
                   HeightRequest="20" WidthRequest="245"
                   BackgroundColor="#FFE5B4" PlaceholderColor="#B4B4B4"/>

               </Frame>

         </Grid>

        <Grid AbsoluteLayout.LayoutBounds="0.5, 0.46"
              AbsoluteLayout.LayoutFlags="PositionProportional">

              <Frame CornerRadius="20" Padding="20,10,35,10" Margin="0"
                     HasShadow="False" BackgroundColor="#FFE5B4">
                    
                   <Entry x:Name="newPassword" Keyboard="Text" FontAttributes="Bold"
                   FontSize="16" Placeholder="PASSWORD" IsPassword="True"
                   HeightRequest="20" WidthRequest="230"
                   BackgroundColor="#FFE5B4" PlaceholderColor="#B4B4B4"/>

               </Frame>

         </Grid>

        <Grid AbsoluteLayout.LayoutBounds="0.5, 0.53"
              AbsoluteLayout.LayoutFlags="PositionProportional">

              <Frame CornerRadius="20" Padding="20,10,35,10" Margin="0"
                     HasShadow="False" BackgroundColor="#FFE5B4">
                    
                   <Entry x:Name="retypePassword" Keyboard="Text" FontAttributes="Bold"
                   FontSize="16" Placeholder="RE-ENTER PASSWORD"
                   HeightRequest="20" WidthRequest="230" IsPassword="True"
                   BackgroundColor="#FFE5B4" PlaceholderColor="#B4B4B4"/>

               </Frame>

         </Grid>

        <ImageButton x:Name="seePassword1" AbsoluteLayout.LayoutBounds="0.815, 0.46"
                         AbsoluteLayout.LayoutFlags="PositionProportional" 
                         HeightRequest="28" WidthRequest="28" Source="eye.png"
                         Aspect="AspectFill" Opacity="0.5" Clicked="clickedSeePassword1"/>

        <ImageButton x:Name="seePassword2" AbsoluteLayout.LayoutBounds="0.815, 0.53"
                         AbsoluteLayout.LayoutFlags="PositionProportional"
                         HeightRequest="28" WidthRequest="28" Source="eye.png"
                         Aspect="AspectFill" Opacity="0.5" Clicked="clickedSeePassword2"/>

        <!--<Entry x:Name="newUsername" Keyboard="Text" 
               FontSize="16" Placeholder="  USERNAME"
               HeightRequest="37" WidthRequest="285"
               AbsoluteLayout.LayoutBounds="0.5, 0.39"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               BackgroundColor="#FFE5B4" PlaceholderColor="#B4B4B4"/>

        <Entry x:Name="newPassword" IsPassword="True" Keyboard="Text"
               FontSize="16" Placeholder="  PASSWORD"
               HeightRequest="37" WidthRequest="285" 
               AbsoluteLayout.LayoutBounds="0.5, 0.46"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               BackgroundColor="#FFE5B4" PlaceholderColor="#B4B4B4"/>

        <Entry x:Name="retypePassword" IsPassword="True" Keyboard="Text"
               FontSize="16" Placeholder="  RE-ENTER PASSWORD"
               HeightRequest="37" WidthRequest="285"
               AbsoluteLayout.LayoutBounds="0.5, 0.53"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               BackgroundColor="#FFE5B4" PlaceholderColor="#B4B4B4"/>-->

        <Button x:Name="backButton" Text="◀  BACK" FontSize="17" FontAttributes="Bold"
                BackgroundColor="#F59A28" TextColor= "White"
                HeightRequest="49" WidthRequest="120" CornerRadius="25"
                AbsoluteLayout.LayoutBounds="0.27, 0.61"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Clicked="clickedBack" />

        <Button x:Name= "finalSignUp" Text="SIGN UP" FontSize="17" FontAttributes="Bold"
                BackgroundColor="#F59A28" TextColor= "White"
                HeightRequest="49" WidthRequest="120" CornerRadius="25"
                AbsoluteLayout.LayoutBounds="0.73, 0.61"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Clicked="clickedFinalSignUp" ></Button>

    </AbsoluteLayout>

