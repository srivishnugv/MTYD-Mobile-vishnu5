<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MTYD.CarlosSignUp">
        <ContentPage.Content>
        <StackLayout Padding="0,0,0,0">
            <Label
                HeightRequest="136"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                Text="Sign Up"
                TextColor="White"
                FontSize="34"
                FontAttributes="Bold"
                BackgroundColor="#136D74">

            </Label>
            <ScrollView>
                <StackLayout
                    Margin="10,10,10,0">
                    <Entry
                        x:Name="userEmailAddress"
                        Placeholder="Email Address"
                        BackgroundColor="Orange">
                    </Entry>
                    <Entry
                        x:Name="userConfirmEmailAddress"
                        Placeholder="Confirm Email Address"
                        BackgroundColor="Orange"></Entry>
                    <Entry
                        x:Name="userPassword"
                        Placeholder="Enter Password"
                        BackgroundColor="Orange">
                    </Entry>
                    <Entry
                        x:Name="userConfirmPassword"
                        Placeholder="Confirm Password"
                        BackgroundColor="Orange">
                    </Entry>
                    <Grid>
                        <Entry Placeholder="Push Notification" IsReadOnly="True"></Entry>
                        <Switch HorizontalOptions="End" Grid.Column="1" IsToggled="True"></Switch>
                    </Grid>
                    <Entry
                        x:Name="userFirstName"
                        Placeholder="First name"
                        BackgroundColor="Orange">
                    </Entry>
                    <Entry
                        x:Name="userLastName"
                        Placeholder="Last name"
                        BackgroundColor="Orange">
                    </Entry>
                    <Entry
                        x:Name="userPhoneNumber"
                        Placeholder="Phone number"
                        BackgroundColor="Orange">
                    </Entry>
                    <Entry
                        x:Name="usertAddress"
                        Placeholder="Street Address"
                        BackgroundColor="Orange">
                    </Entry>
                    <Entry
                        x:Name="userUnitNumber"
                        Placeholder="Apt number"
                        BackgroundColor="Orange">
                    </Entry>
                    <Grid>
                        <Entry
                            x:Name="userCity"
                            Grid.Column="0"
                            Placeholder="City"
                            BackgroundColor="Orange">
                        </Entry>
                        <Entry
                            x:Name="userState"
                            Grid.Column="1"
                            Placeholder="State"
                            BackgroundColor="Orange">
                        </Entry>
                        <Entry
                            x:Name="userZipcode"
                            Grid.Column="2"
                            Placeholder="Zipcode"
                            BackgroundColor="Orange">
                        </Entry>
                    </Grid>
                    <Button
                        Text="Validate Address"
                        TextColor="#FF8500"
                        FontAttributes="Bold"
                        CornerRadius="5"
                        BorderColor="LightGray"
                        BorderWidth="1"
                        HeightRequest="40"
                        BackgroundColor="White"
                        Clicked="ValidateAddressClick">

                    </Button>
                    <Button
                        Text="Sign up"
                        TextColor="White"
                        CornerRadius="5"
                        BorderColor="LightGray"
                        BorderWidth="1"
                        HeightRequest="40"
                        BackgroundColor="#FF8500"
                        Clicked="SignUpNewUser">
                    </Button>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
